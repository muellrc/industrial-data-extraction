#!/usr/bin/env bash

unset http_proxy
unset https_proxy
export http_proxy
export https_proxy

HOST=localhost:9200

echo "Loading Elastic Dynamic Templates"

# curl -XDELETE "http://${HOST}/_template/kafkaconnect/"
# echo
# echo

curl -XPUT "http://${HOST}/_template/kafkaconnect/" -H 'Content-Type: application/json' -d'
{
  "template": "*",
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "dates": {
            "match": "EVENT_TS",
            "mapping": {
              "type": "date"
            }
          }
        },
        {
          "plctag": {
            "match": "plctag",
            "mapping": {
              "type": "string"
            }
          }
        },
        {
          "locations": {
            "match": "value",
            "mapping": {
              "type": "integer"
            }
          }
        }
      ]
    }
  }
}'

echo
